.tc-tiddler-body ul:hover,
.tc-tiddler-body ol:hover,
.tc-tiddler-body dd:hover {
  Box-Shadow: 2px 2px 12px RGBA(128, 128, 128, 0.5);
  padding-top: 4px;
  padding-bottom: 4px;
  padding-right: 4px;
}
ul, ol, dd { transition: 0.3s; }

.tc-tiddler-body li { padding-top: 4px; }

